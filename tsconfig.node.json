{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*",  "src/preload/**/*", "src/shared/**/*"],
  "compilerOptions": {
    "composite": true,
      "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {

    "@preload/*": ["src/preload/*"],
    "@shared/*": ["src/shared/*"]
    }

  }
}
